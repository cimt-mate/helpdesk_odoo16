<odoo>
    <record id="view_helpdesk_res_partner_info_form" model="ir.ui.view">
        <field name="name">helpdesk.res.partner.info.form</field>
        <field name="model">helpdesk.res.partner.info</field>
        <field name="arch" type="xml">
            <form string="Heldesk Customer">
                <sheet>
                    <group string="Customer Info" col="2">
                        <group>
                            <field name="partner_name" readonly="1" />
                            <field name="partner_street" readonly="1" />
                        </group>
                        <group>
                            <field name="partner_nickname" readonly="1" />
                            <field name="partner_trader" readonly="1" />
                        </group>
                        <group>
                            <field name="max_contract_end_date" readonly="1" />
                            <field name="license_expired_date" />
                        </group>
                    </group>
                    <group string="Server Info" col="2">
                        <group>
                            <field name="server_name" />
                            <field name="os_name" />
                        </group>
                        <group>
                            <field name="ip" />
                            <field name="domain" />
                        </group>
                        <group>
                            <field name="user_login" />
                            <field name="password" />
                        </group>
                    </group>
                    <group string="Oracle Info" col="2">
                        <group>
                            <field name="oracle_version" />
                            <field name="oracle_path" />
                        </group>
                        <group>
                            <field name="oracle_language" />
                        </group>
                        <group>
                            <field name="backup_path" />
                            <field name="backup_out_path" />
                        </group>
                    </group>
                    <group string="Server Info" col="2">
                        <group>
                            <field name="backup_path" />
                            <field name="backup_out_path" />
                        </group>
                        <group>
                            <field name="doctor_data_name" />
                            <field name="doctor_basic_name" />
                        </group>
                        <group>
                            <field name="license_info" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- View -->
    <record id="view_helpdesk_res_partner_info_tree" model="ir.ui.view">
        <field name="name">helpdesk.res.partner.info.tree</field>
        <field name="model">helpdesk.res.partner.info</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Customer">
                <field name="partner_name" />
                <field name="partner_trader" string="Trader" />
                <field name="max_contract_end_date" string="End Date" />
                <field name="license_expired_date" string="Expired Date" />
                <field name="ip" />
                <field name="domain" />
                <field name="oracle_version" />
                <field name="backup_path" />
                <field name="backup_out_path" string="Outside Path" />
            </tree>
        </field>
    </record>
    <!-- Search View for the new helpdesk.res.partner.info model -->
    <record id="view_helpdesk_res_partner_info_search" model="ir.ui.view">
        <field name="name">helpdesk.res.partner.info.search</field>
        <field name="model">helpdesk.res.partner.info</field>
        <field name="arch" type="xml">
            <search string="Search Helpdesk Customer">
                <field name="partner_name" />
                <field name="partner_trader" />
                <field name="server_name" />
                <field name="os_name" />
                <field name="oracle_version" />
                <field name="oracle_language" />
            </search>
        </field>
    </record>

    <!-- Action to open the views -->
    <record id="action_helpdesk_res_partner_info" model="ir.actions.act_window">
        <field name="name">Helpdesk Customer Info</field>
        <field name="res_model">helpdesk.res.partner.info</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_helpdesk_res_partner_tree')}),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_helpdesk_res_partner_form')})]" />
        <field name="context">{'create': False, 'delete': False}</field>
        <field name="search_view_id" ref="view_helpdesk_res_partner_search" />
    </record>

    <!-- Menu item to access the new action -->
    <menuitem id="menu_helpdesk_res_partner_info" name="Helpdesk Customer Info"
        parent="menu_helpdesk"
        action="action_helpdesk_res_partner_info"
        sequence="3" />
</odoo>